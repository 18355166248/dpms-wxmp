{
  "pages": [
    {
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "首页",
        "disableScroll": true,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/me/me",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationStyle": "custom",
        "disableScroll": true
      }
    }
  ],
  "subPackages": [
    {
      "root": "baseSubpackages/todayWork/",
      "name": "todayWork",
      "pages": [
        {
          "path": "todayWork",
          "style": {
            "navigationBarTitleText": "今日工作",
            "enablePullDownRefresh": true,
            "onReachBottomDistance": 50
          }
        }
      ]
    },
    {
      "root": "pages/myProfile",
      "name": "myProfile",
      "pages": [
        {
          "path": "myProfile",
          "style": {
            "navigationBarTitleText": "我的资料"
          }
        }
      ]
    },
    {
      "root": "pages/patient",
      "name": "patient",
      "pages": [
        {
          "path": "patient",
          "style": {
            "navigationBarTitleText": "患者资料",
            "disableScroll": true
          }
        },
        {
          "path": "createPatient/createPatient",
          "style": {
            "navigationBarTitleText": "新建患者"
          }
        },
        {
          "path": "createPatient/personas",
          "style": {
            "navigationBarTitleText": "用户画像"
          }
        },
        {
          "path": "searchPatient/searchPatient",
          "style": {
            "navigationBarTitleText": "搜索患者"
          }
        }
      ]
    },
    {
      "root": "baseSubpackages/apptView",
      "name": "apptView",
      "pages": [
        {
          "path": "apptView",
          "style": {
            "navigationBarTitleText": "预约视图",
            "disableScroll": true
          }
        }
      ]
    },
    {
      "root": "baseSubpackages/apptForm",
      "name": "apptForm",
      "pages": [
        {
          "path": "apptForm",
          "style": {
            "navigationBarTitleText": "新建预约",
            "disableScroll": true
          }
        },
        {
          "path": "staffList"
        },
        {
          "path": "apptItemList",
          "style": {
            "navigationBarTitleText": "预约项目"
          }
        }
      ]
    }
  ],
  "preloadRule": {
    "baseSubpackages/apptView/apptView": {
      "network": "all",
      "packages": ["apptForm"]
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#5CBB89",
    "backgroundColor": "#F8F8F8"
  },
  "lazyCodeLoading": "requiredComponents",
  "tabBar": {
    "color": "#070707",
    "selectedColor": "#5CBB89",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/home",
        "iconPath": "static/icon-home.png",
        "selectedIconPath": "static/icon-home-active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/me/me",
        "iconPath": "static/icon-me.png",
        "selectedIconPath": "static/icon-me-active.png",
        "text": "我的"
      }
    ]
  },
  "easycom": {
    "autoscan": true,
    "custom": {
      "^dpms(.*)": "@/dpmsComponents/dpms$1/dpms$1.vue"
    }
  }
}
